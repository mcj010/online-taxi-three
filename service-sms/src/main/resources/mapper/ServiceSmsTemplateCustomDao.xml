<mapper namespace="com.mcj010.servicesms.dao.ServiceSmsTemplateCustomDao" >

    <!-- 根据templateId查询模板 -->
    <select id="selectByTemplateId" resultMap="com.mcj010.servicesms.dao.ServiceSmsTemplateDao.BaseResultMap" parameterType="java.lang.String" >
